package thread;
/**
 * sleep()测试
 * @author sunddenly
 *
 */
public class TestSleep {
	public static void main(String[] args) {
		/**
		 * Thread.sleep(long time)
		 * 主动进入阻塞状态time毫秒后回到Runnable状态
		 * 
		 */
		int i = 0;
		while(true){
			System.out.println(i+"秒");
			i++;
			try{
				Thread.sleep(1000);
			} catch(InterruptedException e){
				e.printStackTrace();
			}
		}
	}
}
